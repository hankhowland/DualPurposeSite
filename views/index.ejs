<head>
    <!---bootstrap-->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
</head>


<div class="container">
    <div class="row">
        <div class="col-6 border-right"> 
            <!-- left column -->
            <h5 class="mt-3">RUNNING TRAINING JOURNAL</h5>
            <hr>

            <!-- add run modal -->
            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#addRunForm">
                Add Run
            </button>
            <div class="modal fade" id="addRunForm" tabindex="-1" role="dialog" aria-labelledby="label" aria-hidden="true">
                <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                    <h5 class="modal-title" id="label">Add Run</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    </div>
                    
                    <form action="/routes/addrun" method="post">
                        <div class="modal-body">
                            <div class="form-group">
                                <label>Date (m/d/yyyy)</label>
                                <input class="form-control" name="runDate">
                            </div>
                            <div class="form-group">
                                <label>Title</label>
                                <input name="runTitle" class="form-control">
                            </div>
                            <div class="form-group">
                                <label>Distance (miles)</label>
                                <input class="form-control" name="runDistance">
                            </div>
                            <div class="form-group">
                                <label>Notes</label>
                                <textarea class="form-control" name="runNotes"></textarea>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="submit" id="addrunsubmit" class="btn btn-lg btn-primary">Add</button>
                        </div>
                    </form>
                    
                </div>
                </div>
            </div>
            <hr>

            <!-- display all runs -->
            <ul class="list-group">
                <% items.forEach(function(item) { %>
                    <li class="list-group-item">
                        <%= item.date %>: <%= item.title %> -- <%= item.distance %> miles 
                        <% if (item.notes != '') { %>
                            <!-- notes modal -->
                            <button class="btn btn-sm btn-info float-right" data-toggle="modal" data-target="#notesModal-<%= item._id %>">Notes</span>
                            <div class="modal fade" id="notesModal-<%= item._id %>" tabindex="-1" role="dialog" aria-labelledby="label" aria-hidden="true">
                                <div class="modal-dialog" role="document">
                                    <div class="modal-content">
                                        <div class="modal-header" style="color:black;">
                                            <span>Notes for <%= item.date %></span>
                                        </div>
                                        <div class="modal-body">
                                            <span style="color:black;"><%= item.notes %></span>
                                        </div>  
                                    </div>
                                </div>
                            </div>
                        <% } %>
                    </li>
                <% }); %>
            </ul>
        </div>


        <div class="col-6">
            <!-- right column -->
            <h5 class="mt-3">PROGRAMMING PRACTICE TRACKER</h5>
            <hr>

            <!-- add day modal -->
            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#addHoursForm">
                Add Hours
            </button>
            <div class="modal fade" id="addHoursForm" tabindex="-1" role="dialog" aria-labelledby="label" aria-hidden="true">
                <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                    <h5 class="modal-title" id="label">Add Hours</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    </div>
                    
                    <form action="/routes/addhours" method="post">
                        <div class="modal-body">
                            <div class="form-group">
                                <label>Date (m/d/yyyy)</label>
                                <input class="form-control" name="date">
                            </div>
                            <div class="form-group">
                                <label>Hours of Practice</label>
                                <input name="hours" class="form-control">
                            </div>
                            <div class="form-group">
                                <label>Notes</label>
                                <textarea class="form-control" name="notes"></textarea>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="submit" id="addrunsubmit" class="btn btn-lg btn-primary">Add</button>
                        </div>
                    </form>  
                </div>
                </div>
            </div>
            <hr>
            
            <!-- display all hours -->
            <ul class="list-group">
                <% hours.forEach(function(hour) { %>
                    <li class="list-group-item">
                        <%= hour.date %>: <%= hour.hours %> hours
                        <% if (hour.notes != '') { %>
                            <!-- notes modal -->
                            <button class="btn btn-sm btn-info float-right" data-toggle="modal" data-target="#notesModal-<%= hour._id %>">Notes</span>
                            <div class="modal fade" id="notesModal-<%= hour._id %>" tabindex="-1" role="dialog" aria-labelledby="label" aria-hidden="true">
                                <div class="modal-dialog" role="document">
                                    <div class="modal-content">
                                        <div class="modal-header" style="color:black;">
                                            <span>Notes for <%= hour.date %></span>
                                        </div>
                                        <div class="modal-body">
                                            <span style="color:black;"><%= hour.notes %></span>
                                        </div>  
                                    </div>
                                </div>
                            </div>
                        <% } %>
                    </li>
                <% }); %>
            </ul>

        </div>
    </div>
</div>




